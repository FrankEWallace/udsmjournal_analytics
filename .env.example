# UDSM Global Reach Dashboard - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# OJS Configuration
# ============================================

# OJS Base URL (leave empty for same-origin with Vite proxy)
VITE_OJS_BASE_URL=

# Default journal context path
VITE_OJS_CONTEXT=tjpsd

# OJS API Key (JWT token from OJS Admin > User Profile > API Key)
VITE_OJS_API_KEY=your_jwt_token_here

# ============================================
# Matomo Analytics Configuration
# ============================================

# Matomo server URL
VITE_MATOMO_URL=https://matomo.themenumanager.xyz

# Matomo Site ID
VITE_MATOMO_SITE_ID=2

# Matomo Authentication Token
VITE_MATOMO_TOKEN=your_matomo_token_here

# ============================================
# Application Settings
# ============================================

# Enable debug mode (shows additional logging)
VITE_DEBUG_MODE=false

# API request timeout in milliseconds
VITE_API_TIMEOUT=15000
